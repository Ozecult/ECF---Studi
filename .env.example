# ==================================
# ECORIDE - CONFIGURATION DOCKER
# ==================================
# Copiez ce fichier en .env et adaptez les valeurs si nécessaire

# --- APPLICATION ---
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8080
APP_KEY=votre_cle_secrete_aleatoire_32_caracteres

# --- BASE DE DONNÉES MYSQL ---
DB_HOST=mysql
DB_PORT=3306
DB_NAME=ecoride
DB_USERNAME=ecoride_user
DB_PASSWORD=ecoride_password_2025
MYSQL_ROOT_PASSWORD=root_password_2025

# --- BASE DE DONNÉES MONGODB ---
MONGO_URI=mongodb://mongo:27017
MONGO_DB=ecoride
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=admin_password_2025

# --- PORTS EXPOSÉS ---
# Application web
WEB_PORT=8080
# PhpMyAdmin
PHPMYADMIN_PORT=8081
# Mongo Express
MONGO_EXPRESS_PORT=8082
# MySQL (accès direct)
MYSQL_PORT=3306
# MongoDB (accès direct)
MONGODB_PORT=27017

# --- EMAIL (SMTP) ---
# Non configuré dans cette version Docker
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_ENCRYPTION=tls
SMTP_FROM_ADDRESS=noreply@ecoride.com
SMTP_FROM_NAME=EcoRide

# --- APIS EXTERNES ---
GOOGLE_MAPS_API_KEY=
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=

